        "eslint-plugin-promise": "^4.0.0",
        "eslint-plugin-react": "^7.10.0",
        "eslint-plugin-standard": "^4.0.1",
        "gh-pages": "^2.0.1",
        "react": "^16.8.1",
        "react-dom": "^16.8.1",
        "react-scripts": "^3.3.0",
        "rollup": "^1.29.1",
        "rollup-plugin-babel": "^4.3.2",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-peer-deps-external": "^2.2.0",
